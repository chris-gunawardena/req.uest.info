h1 Submit Requests


h5 Requests log

table(ng-table="table_params"  class="table table-striped table-hover")
  tr
    th Time
    th IP address
    th Method
    th URL
    th Query
    th Body
  tr(ng-repeat="request in requests" ng-click="set_selected_row(request)")
    td{{request.time}}
    td{{request.ip_address}}
    td{{request.method}}
    td{{request.url}}
    td{{request.query}}
    td{{request.body}}

pre(id="json-pretty-print" ng-bind-html="selected_row.pretty" ng-show="selected_row")
